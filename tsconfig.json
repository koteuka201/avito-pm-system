{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "paths": {
      "@shared/*": ["shared/*"],
      "@pages/*": ["pages/*"],
      "@widgets/*": ["widgets/*"],
      "@entities/*": ["entities/*"],
    },
  },
  "include": ["./src", "src", "./src/*", "vite.config.ts"]
}
